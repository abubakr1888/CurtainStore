@page "/"

<PageTitle>Home</PageTitle>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Curtain Store</title>
    <style>
        /* Resetting default margin and padding */
        body, h1, h2, h3, p, ul {
            margin: 0;
            padding: 0;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            color: #333;
            line-height: 1.6;
        }

        header {
            background-color: #333;
            color: #fff;
            padding: 20px;
            text-align: center;
        }

        nav ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        nav ul li {
            display: inline;
            margin-right: 20px;
        }

        nav ul li a {
            color: #fff;
            text-decoration: none;
        }

        .hero {
            text-align: center;
            padding: 100px 0;
            background-image: url('curtain1.png');
            background-size: cover;
            color: #fff;
        }

        .hero h2 {
            font-size: 36px;
            margin-bottom: 20px;
        }

        .hero p {
            font-size: 18px;
            margin-bottom: 20px;
        }

        .btn {
            display: inline-block;
            background-color: #333;
            color: #fff;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .btn:hover {
            background-color: #555;
        }

        section {
            padding: 50px 0;
            text-align: center;
        }

        .product {
            display: inline-block;
            width: 300px;
            margin: 20px;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: left;
        }

        .product img {
            width: 100%;
            height: 500px;
            border-radius: 5px;
        }

        .product h3 {
            margin-top: 10px;
        }

        .product p {
            margin-bottom: 10px;
        }

        footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 20px 0;
        }
    </style>
</head>
<body>
    <header>
        <h1>Curtain Store</h1>
        <nav>
            <ul>
                <li><a href="#home">Home</a></li>
                <li><a href="#products">Products</a></li>
                <li><a href="#about">About Us</a></li>
                <li><a href="#contact">Contact</a></li>
            </ul>
        </nav>
    </header>

    <section id="home">
        <div class="hero">
            <h2>Welcome to our Curtain Store</h2>
            <p>Discover a wide range of curtains for your home!</p>
            <a href="#products" class="btn">Explore Products</a>
        </div>
    </section>

    <section id="products">
        <h2>Our Products</h2>
        <!-- Product listings go here -->
        <div class="product">
            <img src="curtain1.jpg" alt="Curtain">
            <h3>Curtain Name</h3>
            <p>Description of the curtain.</p>
            <p>Price: $XX.XX</p>
            <a href="#">Add to Cart</a>
        </div>
        <!-- Repeat the above structure for each product -->
    </section>

    <section id="about">
        <h2>About Us</h2>
        <p>Information about your curtain store and its history.</p>
    </section>

    <section id="contact">
        <h2>Contact Us</h2>
        <p>Contact information and a contact form can be placed here.</p>
    </section>

    <footer>
        <p>&copy; 2024 Curtain Store. All rights reserved.</p>
    </footer>
</body>
</html>
